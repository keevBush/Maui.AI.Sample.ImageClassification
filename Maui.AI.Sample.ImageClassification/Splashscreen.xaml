<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.AI.Sample.ImageClassification.Splashscreen"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
            <GradientStop Offset="-0.10" Color="#81C8F7" />
            <GradientStop Offset="0.25" Color="#8279D8" />
            <GradientStop Offset="0.65" Color="#4331E3" />
            <GradientStop Offset="1.05" Color="#0CB539" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid Padding="30,0" RowDefinitions="*,auto">

        <ActivityIndicator
            Grid.Row="1"
            IsRunning="True"
            Opacity="0.7"
            Color="White" />
    </Grid>

</ContentPage>
